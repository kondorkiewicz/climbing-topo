<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Draw Route</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="canvas_container2">
          <canvas id="sector2"
                  width="<%= @sector.image.width %>"
                  height="<%= @sector.image.height %>"
                  style="border: solid 1px #000"
                  data-img="<%= @sector.image_url.to_s %>"
                  data-routes="<%= @sector.routes.to_json %>"
          </canvas>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" id="close" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="undo" class="btn btn-secondary">Undo</button>
      </div>
    </div>
  </div>
</div>
